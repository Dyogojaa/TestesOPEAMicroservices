@model TesteOpea.ClientesFrontEnd.Models.ClienteViewModel

<form asp-action="Apagar">
    <input asp-for="Id" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Apagar Cliente</h1>
        <hr />
        <div class="row">            
            <div class="col-2">
                <label asp-for="NomeEmpresa" class="control-label pt-2" style="font-size=20px;"></label>

            </div>
            <div class="col-10 pb-3">
                <input asp-for="NomeEmpresa" disabled class="form-control"/>                
            </div>

            <div class="col-2">
                <label asp-for="PorteEmpresa" class="control-label"></label>
            </div>
            
            <div class="col-10 pb-3">
                <select asp-for="PorteEmpresa" disabled class="form-control" asp-items="ViewBag.PorteEmpresa"></select>
                <span asp-validation-for="PorteEmpresa"  class="text-danger"></span>
            </div>

            <div class="col-5">
                <input type="submit" value="Apagar" class="btn btn-danger form-control" />
            </div>
             <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control ">Voltar</a>
            </div>            
        </div>
    </div>
</form>
