@model TesteOpea.ClientesFrontEnd.Models.ClienteViewModel

<form asp-action="Atualizar">
    <input asp-for="Id" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Atualizar Empresa</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="NomeEmpresa" class="control-label pt-2" style="font-size=20px;"></label>

            </div>
            <div class="col-10 pb-3">
                <input asp-for="NomeEmpresa" class="form-control"/>
                <span asp-validation-for="NomeEmpresa" class="text-danger"></span>
            </div>


            <div class="col-2">
                <label asp-for="PorteEmpresa" class="control-label"></label>
            </div>
            
            <div class="col-10 pb-3">
                <select asp-for="PorteEmpresa" class="form-control" asp-items="ViewBag.PorteEmpresa"></select>
                <span asp-validation-for="PorteEmpresa" class="text-danger"></span>
            </div>
            
            <div class="col-5">
                <input type="submit" value="Atualizar" class="btn btn-success form-control" />
            </div>
             <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control ">Voltar</a>
            </div>            
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}