@model IEnumerable<TesteOpea.ClientesFrontEnd.Models.ClienteViewModel> 

<br/>
<br/>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Clientes Cadastrados</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="Criar" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i>Criar Novo Cliente
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Nome da Empresa
                </th>
                <th>
                    Porte da Empresa
                </th>
                <th>                    
                </th>
                <th>                    
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)    
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.NomeEmpresa
                    </td>
                    
                    
                    @{
                        switch(@item.PorteEmpresa)
                    {
                        case "0":
                            <td>Pequena</td>
                            break;  
                        case "1":            
                            <td>Média</td>
                            break;
                        case "2":            
                            <td>Grande</td>
                            break;                        
                    }
}

                    <td>
                        <a asp-action="Atualizar" class="btn btn-success" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td>                        
                        <a asp-action="Apagar" class="btn btn-danger" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>